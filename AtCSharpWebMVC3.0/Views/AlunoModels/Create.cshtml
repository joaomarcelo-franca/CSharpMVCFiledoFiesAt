@model AtCSharpWebMVC3._0.Models.AlunoModel

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar Aluno</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input required asp-for="Nome" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input required asp-for="Matricula" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input required asp-for="Idade" class="form-control" />
                
            </div>
            <div class="form-group">
                <label for="Upload">Imagem do Aluno</label>
                <input type="file" asp-for="Upload" class="form-control">
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista de alunos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
@section imgfooter{
    <img src="~/EF1.png" width="100">
}
